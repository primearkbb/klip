{
  "name": "klip",
  "version": "1.0.0",
  "exports": "./src/main.ts",
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env src/main.ts",
    "build": "deno compile --allow-net --allow-read --allow-write --allow-env --output ./dist/klip src/main.ts",
    "start": "deno run --allow-net --allow-read --allow-write --allow-env src/main.ts"
  },
  "imports": {
    "@std/encoding/hex": "https://deno.land/std@0.208.0/encoding/hex.ts",
    "@std/encoding/base64": "https://deno.land/std@0.208.0/encoding/base64.ts",
    "@cliffy/ansi/colors": "https://deno.land/x/cliffy@v1.0.0-rc.4/ansi/colors.ts"
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "checkJs": false
  }
}