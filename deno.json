{
  "name": "klip",
  "version": "1.0.0",
  "exports": "./src/main.ts",
  "tasks": {
    "dev": "deno run --allow-net=api.anthropic.com,api.openai.com,openrouter.ai --allow-read=.,.klip --allow-write=.klip --allow-env=HOME,USERPROFILE --watch src/main.ts",
    "build": "deno compile --allow-net=api.anthropic.com,api.openai.com,openrouter.ai --allow-read=.,.klip --allow-write=.klip --allow-env=HOME,USERPROFILE --output ./dist/klip src/main.ts",
    "start": "deno run --allow-net=api.anthropic.com,api.openai.com,openrouter.ai --allow-read=.,.klip --allow-write=.klip --allow-env=HOME,USERPROFILE src/main.ts",
    "check": "deno check src/main.ts",
    "lint": "deno lint src/",
    "fmt": "deno fmt src/"
  },
  "imports": {
    "@std/encoding/hex": "jsr:@std/encoding@^1.0.0/hex",
    "@std/encoding/base64": "jsr:@std/encoding@^1.0.0/base64",
    "@cliffy/ansi/colors": "jsr:@cliffy/ansi@^1.0.0-rc.7/colors"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true
  },
  "exclude": ["dist/", "node_modules/"]
}